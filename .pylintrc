[MASTER]
# Use multiple processes to speed up Pylint.
jobs=3

[TYPECHECK]
ignored-modules=RPi, picamera

[MESSAGES CONTROL]
#disable=line-too-long,bad-whitespace
disable=C0301,C0326

[BASIC]
argument-naming-style=snake_case
good-names=i, j, k, ex, Run, _

[DESIGN]
max-args=5
max-attributes=7
max-bool-expr=5
max-branches=12
max-locals=15
max-parents=7
max-public-methods=20
max-returns=6
max-statements=100
min-public-methods=2
